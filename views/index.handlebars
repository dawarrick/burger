<container>
<img src="daburger.jpg" alt="Burger">
<h1>Eat-Da-Burger!</h1>

<div>
  <div class='noteaten'>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/unless}}
    {{/each}}
  </div>

  <div class='eaten'>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/if}}
    {{/each}}
  </div>

</div>
  <div class='addburger'>
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <!--label for="ca">Burger Name:</label-->
        <input type="text" id="ca" name="burger_name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
  </container>
